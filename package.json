{
    "name": "snapp",
    "version": "2.0.0",
    "description": "Snapp!",

    "author": {
        "name": "Adrian Hintze",
        "email": "hintze.adrian@gmail.com",
        "url": "https://github.com/Rydion/"
    },

    "private": true,

    "scripts": {
        "run": "node .\\build\\snapp\\Snapp.js",
        "build": "npm run build-server && npm run build-client && npm run copy-snap",
        "build-server": "rimraf build/snapp && tsc -p .\\server-tsconfig.json",
        "build-client": "rimraf build/WebContent && webpack --config conf/webpack.prod.js --progress --profile",
        "copy-snap": "npm run copy-snap-full && npm run copy-snap-reduced",
        "copy-snap-full": "copyfiles -u 2 -e \"./node_modules/snap-4-snapp-full/gui.js\" \"./node_modules/snap-4-snapp-full/**/*\" \"./build/resources/snap/full/files\" && copyfiles -u 2 \"./node_modules/snap-4-snapp-full/gui.js\" \"./build/resources/snap/full/gui\"",
        "copy-snap-reduced": "copyfiles -u 2 -e \"./node_modules/snap-4-snapp-reduced/gui.js\" \"./node_modules/snap-4-snapp-reduced/**/*\" \"./build/resources/snap/reduced/files\" && copyfiles -u 2 \"./node_modules/snap-4-snapp-reduced/gui.js\" \"./build/resources/snap/reduced/gui\""
    },

    "engines": {
        "node": ">=7.9.0",
        "npm": ">=4.5.0"
    },

    "dependencies": {
        "express": "4.15.2",
        "body-parser": "1.17.1",
        "multer": "1.3.0",
        "compression": "1.6.2",

        "sax": "1.2.2",

        "archiver": "1.3.0",

        "winston": "2.3.1",
        "winston-daily-rotate-file": "1.4.6",

        "mkdirp": "0.5.1",

        "stream-to-array": "2.3.0"
    },

    "devDependencies": {
        "typescript": "2.3.2",

        "@types/archiver": "1.3.1",
        "@types/body-parser": "1.16.3",
        "@types/compression": "0.0.33",
        "@types/express": "4.0.35",
        "@types/file-saver": "0.0.1",
        "@types/mime": "0.0.29",
        "@types/mkdirp": "0.3.29",
        "@types/multer": "0.0.33",
        "@types/node": "7.0.14",
        "@types/sax": "1.0.0",
        "@types/stream-to-array": "0.0.28",
        "@types/winston": "2.3.1",
        "@types/xmldoc": "0.5.0",

        "concurrently": "3.4.0",
        "rimraf": "2.6.1",
        "copyfiles": "1.2.0",

        "webpack": "2.4.1",
        "webpack-merge": "4.1.0",

        "angular2-template-loader": "0.6.2",
        "awesome-typescript-loader": "3.1.3",
        "css-loader": "0.28.0",
        "file-loader": "0.11.1",
        "html-loader": "0.4.5",
        "null-loader": "0.1.1",
        "raw-loader": "0.5.1",
        "style-loader": "0.16.1",
        "to-string-loader": "1.1.5",

        "extract-text-webpack-plugin": "2.1.0",
        "html-webpack-plugin": "2.28.0",

        "@angular/animations": "4.1.0",
        "@angular/common": "4.1.0",
        "@angular/compiler": "4.1.0",
        "@angular/core": "4.1.0",
        "@angular/forms": "4.1.0",
        "@angular/http": "4.1.0",
        "@angular/platform-browser": "4.1.0",
        "@angular/platform-browser-dynamic": "4.1.0",
        "@angular/router": "4.1.0",

        "core-js": "2.4.1",
        "rxjs": "5.3.0",
        "zone.js": "0.8.9",

        "angular2-busy": "2.0.4",
        "angular2-modal": "2.0.3",

        "file-saver": "1.3.3",

        "bootstrap": "3.3.7",

        "snap-4-snapp-full": "git+https://git@github.com/Rydion/Snap-4-Snapp.git#full",
        "snap-4-snapp-reduced": "git+https://git@github.com/Rydion/Snap-4-Snapp.git#reduced"
    }
}
